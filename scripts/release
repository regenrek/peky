#!/usr/bin/env bash
set -euo pipefail

usage() {
  cat <<'USAGE'
Usage: scripts/release X.Y.Z [--allow-branch] [--dry-run]

Runs the full release flow:
- validates repo state
- runs tests (always)
- tags and pushes
- runs GoReleaser
- updates the Homebrew tap formula
- builds npm packages
- publishes npm packages (platform packages first, then meta)
USAGE
}

die() {
  echo "release: $*" >&2
  exit 1
}

if [[ ${1:-} == "-h" || ${1:-} == "--help" || ${1:-} == "" ]]; then
  usage
  exit 1
fi

version_raw=$1
shift
allow_branch=false
dry_run=false
for arg in "$@"; do
  case "$arg" in
    --allow-branch) allow_branch=true ;;
    --dry-run|-n) dry_run=true ;;
    *) die "unknown flag: $arg" ;;
  esac
done

version=${version_raw#v}
if ! [[ $version =~ ^[0-9]+\.[0-9]+\.[0-9]+([.-][0-9A-Za-z.-]+)?$ ]]; then
  die "invalid version '$version_raw' (expected X.Y.Z)"
fi

tag="v$version"

if ! command -v git >/dev/null 2>&1; then die "git not found"; fi
if ! command -v go >/dev/null 2>&1; then die "go not found"; fi
if ! command -v npm >/dev/null 2>&1; then die "npm not found"; fi
if ! command -v goreleaser >/dev/null 2>&1; then
  if [[ $dry_run == true ]]; then
    echo "warning: goreleaser not found"
  else
    die "goreleaser not found"
  fi
fi

if [[ -n $(git status --porcelain) ]]; then
  if [[ $dry_run == true ]]; then
    echo "warning: working tree not clean"
  else
    die "working tree not clean. Commit or stash changes first."
  fi
fi

branch=$(git rev-parse --abbrev-ref HEAD)
if [[ $allow_branch == false && $branch != "main" ]]; then
  if [[ $dry_run == true ]]; then
    echo "warning: current branch is '$branch' (expected 'main')"
  else
    die "current branch is '$branch'. Switch to 'main' or pass --allow-branch."
  fi
fi

if [[ ! -f CHANGELOG.md ]]; then
  die "CHANGELOG.md missing"
fi
if ! grep -q "^## ${version}\\b" CHANGELOG.md; then
  if [[ $dry_run == true ]]; then
    echo "warning: CHANGELOG.md missing '## ${version}' section"
  else
    die "CHANGELOG.md must include a '## ${version}' section"
  fi
fi

npm whoami >/dev/null 2>&1 || {
  if [[ $dry_run == true ]]; then
    echo "warning: npm auth missing (run 'npm login')"
  else
    die "npm auth missing (run 'npm login')"
  fi
}

if [[ -z ${GITHUB_TOKEN:-} ]]; then
  if [[ $dry_run == true ]]; then
    echo "warning: GITHUB_TOKEN missing (export GITHUB_TOKEN=\$(gh auth token))"
  else
    die "GITHUB_TOKEN missing (export GITHUB_TOKEN=\$(gh auth token))"
  fi
fi

if git rev-parse "$tag" >/dev/null 2>&1; then
  if [[ $dry_run == true ]]; then
    echo "warning: tag already exists: $tag"
  else
    die "tag already exists: $tag"
  fi
fi

run() {
  if [[ $dry_run == true ]]; then
    echo "+ $*"
    return 0
  fi
  "$@"
}

run_in_dir() {
  local dir=$1
  shift
  if [[ $dry_run == true ]]; then
    echo "+ (cd \"$dir\" && $*)"
    return 0
  fi
  (cd "$dir" && "$@")
}

update_homebrew_tap() {
  if ! command -v brew >/dev/null 2>&1; then
    if [[ $dry_run == true ]]; then
      echo "warning: brew not found (homebrew update skipped)"
      return 0
    fi
    die "brew not found (install Homebrew to update the tap)"
  fi

  local tap_repo
  tap_repo=$(brew --repository regenrek/homebrew-tap 2>/dev/null || true)
  if [[ -z $tap_repo || ! -d $tap_repo ]]; then
    if [[ $dry_run == true ]]; then
      echo "warning: homebrew tap regenrek/homebrew-tap not found (run 'brew tap regenrek/tap')"
      return 0
    fi
    die "homebrew tap regenrek/homebrew-tap not found (run: brew tap regenrek/tap)"
  fi

  if [[ -n $(git -C "$tap_repo" status --porcelain) ]]; then
    if [[ $dry_run == true ]]; then
      echo "warning: homebrew tap repo has uncommitted changes: $tap_repo"
    else
      die "homebrew tap repo has uncommitted changes: $tap_repo"
    fi
  fi

  local tarball_url sha256 formula_path
  tarball_url="https://github.com/regenrek/peakypanes/archive/refs/tags/${tag}.tar.gz"

  if [[ $dry_run == true ]]; then
    sha256="DRY_RUN_SHA256"
  else
    sha256=$(curl -fsSL --max-time 60 "$tarball_url" | shasum -a 256 | awk '{print $1}')
    if [[ -z $sha256 ]]; then
      die "failed to compute sha256 for $tarball_url"
    fi
  fi

  formula_path="$tap_repo/Formula/peakypanes.rb"

  if [[ $dry_run == true ]]; then
    echo "+ write $formula_path (version $version)"
  else
    cat > "$formula_path" <<EOF
class Peakypanes < Formula
  desc "Terminal dashboard with YAML-based layouts and native live previews."
  homepage "https://github.com/regenrek/peakypanes"
  url "$tarball_url"
  sha256 "$sha256"
  depends_on "go" => :build

  def install
    ldflags = "-s -w -X main.version=#{version}"
    system "go", "build", *std_go_args(ldflags: ldflags), "./cmd/peakypanes"
  end

  test do
    system "#{bin}/peakypanes", "--version"
  end
end
EOF
  fi

  if [[ $dry_run == true ]]; then
    echo "+ (cd \"$tap_repo\" && git add Formula/peakypanes.rb)"
    echo "+ (cd \"$tap_repo\" && git commit -m \"peakypanes ${tag}\")"
    echo "+ (cd \"$tap_repo\" && git push)"
    return 0
  fi

  (cd "$tap_repo" && git add Formula/peakypanes.rb && git commit -m "peakypanes ${tag}" && git push)
}

printf "Running tests...\n"
go test ./...

printf "Creating tag %s...\n" "$tag"
run git tag "$tag"
run git push origin HEAD --tags

printf "Running GoReleaser...\n"
run goreleaser release --clean

printf "Updating Homebrew tap...\n"
update_homebrew_tap

printf "Building npm packages...\n"
run npm run build:npm-packages

if [[ ! -d packages/peakypanes ]]; then
  if [[ $dry_run == true ]]; then
    echo "warning: packages/peakypanes not found (npm build not run)"
  else
    die "packages/peakypanes not found (npm build failed)"
  fi
fi

printf "Publishing platform packages...\n"
platform_dirs=()
while IFS= read -r dir; do
  platform_dirs+=("$dir")
done < <(find packages -maxdepth 1 -type d -name 'peakypanes-*' | sort)

if [[ ${#platform_dirs[@]} -eq 0 ]]; then
  if [[ $dry_run == true ]]; then
    echo "warning: no platform packages found under packages/"
  else
    die "no platform packages found under packages/"
  fi
fi

if [[ ${#platform_dirs[@]} -gt 0 ]]; then
  for dir in "${platform_dirs[@]}"; do
    echo "Publishing $dir"
    run_in_dir "$dir" npm publish --access public
  done
fi

printf "Publishing meta package...\n"
run_in_dir packages/peakypanes npm publish --access public

printf "Release complete: %s\n" "$tag"
